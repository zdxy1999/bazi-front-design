<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>五行八字命盘</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        :root {
            --border-size: 2px;
            --spotlight-size: 200px;
            --hue: 210;
            --saturation: 100;
            --lightness: 60;
            --bg-spot-opacity: 0.15;
            --border-spot-opacity: 1;
            --border-light-opacity: 1;
            --backdrop: transparent;
            --backup-border: hsl(0 0% 50% / 0.2);
            --radius: 0px;
            --x: 960;
            --y: 540;
            --glow-hue: 0;
            --glow-saturation: 100;
            --glow-lightness: 28;
            --edge-proximity: 0;
            --highlight-x: 960;
            --highlight-y: 540;

            /* 九星命卦颜色主题 */
            --star-1-hue: 0; --star-1-saturation: 70; --star-1-lightness: 50;
            --star-2-hue: 45; --star-2-saturation: 90; --star-2-lightness: 60;
            --star-3-hue: 60; --star-3-saturation: 100; --star-3-lightness: 50;
            --star-4-hue: 120; --star-4-saturation: 70; --star-4-lightness: 45;
            --star-5-hue: 150; --star-5-saturation: 90; --star-5-lightness: 40;
            --star-6-hue: 180; --star-6-saturation: 90; --star-6-lightness: 50;
            --star-7-hue: 210; --star-7-saturation: 90; --star-7-lightness: 60;
            --star-8-hue: 270; --star-8-saturation: 90; --star-8-lightness: 60;
            --star-9-hue: 330; --star-9-saturation: 80; --star-9-lightness: 70;

            /* ========== 5个旋转光晕的颜色配置 ========== */
            --orbit-glow-1-hue: 0;      /* 红色 */
            --orbit-glow-1-saturation: 70;
            --orbit-glow-1-lightness: 20;
            --orbit-edge-opacity-1: 0;
            --orbit-glow-2-hue: 60;     /* 黄色 */
            --orbit-glow-2-saturation: 90;
            --orbit-glow-2-lightness: 30;
            --orbit-edge-opacity-2: 0;
            --orbit-glow-3-hue: 120;    /* 绿色 */
            --orbit-glow-3-saturation: 90;
            --orbit-glow-3-lightness: 20;
            --orbit-edge-opacity-3: 0;
            --orbit-glow-4-hue: 210;    /* 蓝色 */
            --orbit-glow-4-saturation: 90;
            --orbit-glow-4-lightness: 30;
            --orbit-edge-opacity-4: 0;
            --orbit-glow-5-hue: 0;      /* 白色 */
            --orbit-glow-5-saturation: 0;
            --orbit-glow-5-lightness: 30;
            --orbit-edge-opacity-5: 0;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        :root {
            --border-size: 2px;
            --spotlight-size: 200px;
            --hue: 210;
            --saturation: 100;
            --lightness: 60;
            --bg-spot-opacity: 0.15;
            --border-spot-opacity: 1;
            --border-light-opacity: 1;
            --backdrop: transparent;
            --backup-border: hsl(0 0% 50% / 0.2);
            --radius: 0px;
            --x: 960;
            --y: 540;
            --glow-hue: 0;
            --glow-saturation: 100;
            --glow-lightness: 28;
            --edge-proximity: 0;
            --highlight-x: 960;
            --highlight-y: 540;

            /* ========== 5个旋转光晕的颜色配置 ========== */
            /* 每个光晕的色相值 (HSL中的H) */
            --orbit-glow-1-hue: 0;      /* 红色 */
            --orbit-glow-1-saturation: 70;
            --orbit-glow-1-lightness: 20;
            --orbit-edge-opacity-1: 0;  /* 边缘高光透明度 */

            --orbit-glow-2-hue: 60;     /* 黄色 */
            --orbit-glow-2-saturation: 90;
            --orbit-glow-2-lightness: 30;
            --orbit-edge-opacity-2: 0;

            --orbit-glow-3-hue: 120;    /* 绿色 */
            --orbit-glow-3-saturation: 90;
            --orbit-glow-3-lightness: 20;
            --orbit-edge-opacity-3: 0;

            --orbit-glow-4-hue: 210;    /* 蓝色 */
            --orbit-glow-4-saturation: 90;
            --orbit-glow-4-lightness: 30;
            --orbit-edge-opacity-4: 0;

            --orbit-glow-5-hue: 0;      /* 白色（色相为0，饱和度0） */
            --orbit-glow-5-saturation: 0;
            --orbit-glow-5-lightness: 30;
            --orbit-edge-opacity-5: 0;
            /* ========== 颜色配置结束 ========== */
        }

        body {
            width: 100vw;
            height: 100vh;
            overflow: hidden;
            background: linear-gradient(135deg, #000000 0%, #0a0a0f 100%);
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: background 0.5s ease;
        }

        /* 浅色主题 */
        body.light-theme {
            background: linear-gradient(135deg, #ffffff 0%, #f5f5f5 100%);
        }

        /* 主题切换按钮 - 玻璃圆形按钮 */
        .theme-toggle {
            position: fixed;
            top: 20px;
            right: 20px;
            z-index: 1000;
            width: 48px;
            height: 48px;
            background: rgba(255, 255, 255, 0.05);
            backdrop-filter: blur(20px);
            -webkit-backdrop-filter: blur(20px);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
            outline: none;
        }

        .theme-toggle svg {
            width: 24px;
            height: 24px;
            fill: none;
            stroke: rgba(255, 255, 255, 0.9);
            stroke-width: 1.5;
            stroke-linecap: round;
            stroke-linejoin: round;
            transition: all 0.3s ease;
        }

        .theme-toggle:hover {
            transform: scale(1.1);
            background: rgba(255, 255, 255, 0.08);
            border-color: rgba(255, 255, 255, 0.2);
            box-shadow:
                0 8px 32px rgba(0, 0, 0, 0.3),
                0 0 0 1px rgba(255, 255, 255, 0.1);
        }

        .theme-toggle:hover svg {
            stroke: rgba(255, 255, 255, 1);
        }

        .theme-toggle:active {
            transform: scale(1.05);
        }

        /* 浅色主题 */
        body.light-theme .theme-toggle {
            background: rgba(255, 255, 255, 0.4);
            border: 1px solid rgba(0, 0, 0, 0.08);
        }

        body.light-theme .theme-toggle svg {
            stroke: rgba(0, 0, 0, 0.7);
        }

        body.light-theme .theme-toggle:hover {
            background: rgba(255, 255, 255, 0.6);
            border-color: rgba(0, 0, 0, 0.15);
            box-shadow:
                0 8px 32px rgba(0, 0, 0, 0.1),
                0 0 0 1px rgba(0, 0, 0, 0.05);
        }

        body.light-theme .theme-toggle:hover svg {
            stroke: rgba(0, 0, 0, 1);
        }

        .card {
            width: 100vw;
            height: 100vh;
            max-width: none;
            max-height: none;
            border-radius: var(--radius);
            position: relative;
            background: var(--backdrop);
            backdrop-filter: blur(20px);
            border: var(--border-size) solid var(--backup-border);
            overflow: hidden;
        }

        /* 核心光晕效果 */
        .card[data-glow] {
            background: none; /* 禁用鼠标跟随的光晕 */
        }

        /* 边缘光晕层容器 */
        .card-glow-border {
            position: absolute;
            inset: -10px;
            pointer-events: none;
            z-index: 10;
            border-radius: calc(var(--radius) + 10px);
            overflow: visible;
        }

        /* 边缘光晕 - 强调光 */
        .card-glow-border::before {
            display: none; /* 禁用鼠标跟随的边缘光晕 */
        }

        /* 内部遮罩 - 只显示边缘 */
        .card-glow-inner {
            position: absolute;
            inset: 4px;
            background: linear-gradient(135deg, #000000 0%, #0a0a0f 100%);
            border-radius: calc(var(--radius) - 4px);
            z-index: 50;
            opacity: 1;
            pointer-events: none;
            transition: background 0.5s ease;
        }

        body.light-theme .card-glow-inner {
            background: linear-gradient(135deg, #ffffff 0%, #f5f5f5 100%);
        }

        /* 光晕可见性蒙版 - 中心暗淡，边缘明亮 */
        .glow-visibility-mask {
            position: absolute;
            inset: 0;
            border-radius: var(--radius);
            z-index: 60;
            pointer-events: none;
            background: radial-gradient(
                circle at center,
                rgba(0, 0, 0, 1) 0%,
                rgba(0, 0, 0, 1) 50%,
                rgba(0, 0, 0, 0.9) 65%,
                rgba(0, 0, 0, 0.6) 80%,
                rgba(0, 0, 0, 0.2) 90%,
                rgba(0, 0, 0, 0) 95%
            );
            transition: background 0.5s ease;
        }

        body.light-theme .glow-visibility-mask {
            background: radial-gradient(
                circle at center,
                rgba(255, 255, 255, 0.6) 0%,
                rgba(255, 255, 255, 0.5) 40%,
                rgba(255, 255, 255, 0.3) 60%,
                rgba(255, 255, 255, 0.1) 80%,
                rgba(255, 255, 255, 0) 90%
            );
        }

        /* 额外的边缘光晕增强层 */
        .card-glow-border-extra {
            display: none; /* 禁用额外的边缘光晕增强层 */
        }

        .card-glow-inner::before {
            display: none; /* 禁用内部光晕 */
        }

        /* 边缘光晕 - 聚光点 */
        .card-glow-border::after {
            display: none;
        }

        /* 独立的白色高光层 - 为每个光晕创建 */
        .card-glow-highlight {
            position: absolute;
            inset: -10px;
            pointer-events: none;
            z-index: 60;
            border-radius: calc(var(--radius) + 10px);
            background-attachment: fixed;
            background-size: cover;
            background-repeat: no-repeat;
            background-position: 50% 50%;
            background-image: radial-gradient(
                calc(var(--spotlight-size) * 0.4) calc(var(--spotlight-size) * 0.4) at
                calc(var(--highlight-x, 960) * 1px)
                calc(var(--highlight-y, 540) * 1px),
                hsl(0, 0%, 100% / 0.8),
                transparent 100%
            );
            filter: brightness(5) drop-shadow(0 0 8px rgba(255, 255, 255, 0.6));
            opacity: calc(var(--edge-proximity, 0) * var(--edge-proximity, 0) * 2);
            display: none; /* 隐藏原来的单一高光层 */
        }

        /* 5个光晕对应的边缘高光层 */
        .card-glow-highlight-1,
        .card-glow-highlight-2,
        .card-glow-highlight-3,
        .card-glow-highlight-4,
        .card-glow-highlight-5 {
            position: absolute;
            inset: 0;
            pointer-events: none;
            z-index: 45;
            border-radius: var(--radius);
            overflow: hidden;
        }

        /* 边缘高光内部的光晕层 */
        .card-glow-highlight-1::before,
        .card-glow-highlight-2::before,
        .card-glow-highlight-3::before,
        .card-glow-highlight-4::before,
        .card-glow-highlight-5::before {
            content: "";
            position: absolute;
            inset: 0;
            border-radius: var(--radius);
            background-attachment: fixed;
            background-size: cover;
            background-repeat: no-repeat;
            background-position: 50% 50%;
        }

        .card-glow-highlight-1::before {
            --glow-hue: var(--orbit-glow-1-hue);
            --glow-saturation: var(--orbit-glow-1-saturation);
            --glow-lightness: var(--orbit-glow-1-lightness);
            background-image: radial-gradient(
                calc(var(--spotlight-size) * 0.6) calc(var(--spotlight-size) * 0.6) at
                calc(var(--highlight-x-1, 960) * 1px)
                calc(var(--highlight-y-1, 540) * 1px),
                hsl(var(--glow-hue, 0) calc(var(--glow-saturation, 100) * 1%) calc(var(--glow-lightness, 50) * 1%) / 0.7),
                transparent 100%
            );
            opacity: var(--orbit-edge-opacity-1);
        }

        .card-glow-highlight-2::before {
            --glow-hue: var(--orbit-glow-2-hue);
            --glow-saturation: var(--orbit-glow-2-saturation);
            --glow-lightness: var(--orbit-glow-2-lightness);
            background-image: radial-gradient(
                calc(var(--spotlight-size) * 0.6) calc(var(--spotlight-size) * 0.6) at
                calc(var(--highlight-x-2, 960) * 1px)
                calc(var(--highlight-y-2, 540) * 1px),
                hsl(var(--glow-hue, 0) calc(var(--glow-saturation, 100) * 1%) calc(var(--glow-lightness, 50) * 1%) / 0.7),
                transparent 100%
            );
            opacity: var(--orbit-edge-opacity-2);
        }

        .card-glow-highlight-3::before {
            --glow-hue: var(--orbit-glow-3-hue);
            --glow-saturation: var(--orbit-glow-3-saturation);
            --glow-lightness: var(--orbit-glow-3-lightness);
            background-image: radial-gradient(
                calc(var(--spotlight-size) * 0.6) calc(var(--spotlight-size) * 0.6) at
                calc(var(--highlight-x-3, 960) * 1px)
                calc(var(--highlight-y-3, 540) * 1px),
                hsl(var(--glow-hue, 0) calc(var(--glow-saturation, 100) * 1%) calc(var(--glow-lightness, 50) * 1%) / 0.7),
                transparent 100%
            );
            opacity: var(--orbit-edge-opacity-3);
        }

        .card-glow-highlight-4::before {
            --glow-hue: var(--orbit-glow-4-hue);
            --glow-saturation: var(--orbit-glow-4-saturation);
            --glow-lightness: var(--orbit-glow-4-lightness);
            background-image: radial-gradient(
                calc(var(--spotlight-size) * 0.6) calc(var(--spotlight-size) * 0.6) at
                calc(var(--highlight-x-4, 960) * 1px)
                calc(var(--highlight-y-4, 540) * 1px),
                hsl(var(--glow-hue, 0) calc(var(--glow-saturation, 100) * 1%) calc(var(--glow-lightness, 50) * 1%) / 0.7),
                transparent 100%
            );
            opacity: var(--orbit-edge-opacity-4);
        }

        .card-glow-highlight-5::before {
            --glow-hue: var(--orbit-glow-5-hue);
            --glow-saturation: var(--orbit-glow-5-saturation);
            --glow-lightness: var(--orbit-glow-5-lightness);
            background-image: radial-gradient(
                calc(var(--spotlight-size) * 0.6) calc(var(--spotlight-size) * 0.6) at
                calc(var(--highlight-x-5, 960) * 1px)
                calc(var(--highlight-y-5, 540) * 1px),
                hsl(var(--glow-hue, 0) calc(var(--glow-saturation, 100) * 1%) calc(var(--glow-lightness, 50) * 1%) / 0.7),
                transparent 100%
            );
            opacity: var(--orbit-edge-opacity-5);
        }

        /* 内部遮罩 - 只显示边缘 */
        .card-glow-inner {
            position: absolute;
            inset: 4px;
            background: linear-gradient(135deg, #000000 0%, #0a0a0f 100%);
            border-radius: calc(var(--radius) - 4px);
            z-index: 50;
            opacity: 1;
            pointer-events: none;
        }

        /* 围绕鼠标旋转的光晕 */
        .orbiting-glow {
            position: absolute;
            width: calc(var(--spotlight-size) * 1.5);
            height: calc(var(--spotlight-size) * 1.5);
            border-radius: 50%;
            pointer-events: none;
            z-index: 55;
            background: radial-gradient(
                circle,
                hsl(var(--glow-hue, 0) calc(var(--glow-saturation, 100) * 1%) calc(var(--glow-lightness) * 1%) / 0.6),
                transparent 70%
            );
            filter: blur(20px);
            opacity: 0.4;
            transform-origin: center center;
            animation: breathe 3s ease-in-out infinite;
        }

        /* 呼吸动画 */
        @keyframes breathe {
            0%, 100% {
                opacity: 0.2;
                transform: scale(0.9);
            }
            50% {
                opacity: 0.6;
                transform: scale(1.1);
            }
        }

        /* 每个光晕不同的动画周期和颜色 */
        .orbiting-glow-1 {
            animation-duration: 2.5s;
            --glow-hue: var(--orbit-glow-1-hue);
            --glow-saturation: var(--orbit-glow-1-saturation);
            --glow-lightness: var(--orbit-glow-1-lightness);
        }

        .orbiting-glow-2 {
            animation-duration: 3.2s;
            animation-delay: -0.5s;
            --glow-hue: var(--orbit-glow-2-hue);
            --glow-saturation: var(--orbit-glow-2-saturation);
            --glow-lightness: var(--orbit-glow-2-lightness);
        }

        .orbiting-glow-3 {
            animation-duration: 4s;
            animation-delay: -1s;
            --glow-hue: var(--orbit-glow-3-hue);
            --glow-saturation: var(--orbit-glow-3-saturation);
            --glow-lightness: var(--orbit-glow-3-lightness);
        }

        .orbiting-glow-4 {
            animation-duration: 2.8s;
            animation-delay: -1.5s;
            --glow-hue: var(--orbit-glow-4-hue);
            --glow-saturation: var(--orbit-glow-4-saturation);
            --glow-lightness: var(--orbit-glow-4-lightness);
        }

        .orbiting-glow-5 {
            animation-duration: 3.5s;
            animation-delay: -2s;
            --glow-hue: var(--orbit-glow-5-hue);
            --glow-saturation: var(--orbit-glow-5-saturation);
            --glow-lightness: var(--orbit-glow-5-lightness);
        }

        /* 外部光晕层 */
        .card[data-glow] > [data-glow] {
            display: none; /* 禁用外部光晕层 */
        }

        /* 卡片内容 */
        .card-content {
            position: relative;
            z-index: 100;
            padding: 60px;
            height: 100%;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            color: #ffffff;
        }

        .card-content h1 {
            font-size: 4rem;
            font-weight: 200;
            margin-bottom: 1rem;
            letter-spacing: -0.02em;
            background: linear-gradient(135deg, #ffffff 0%, #a0a0a0 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            transition: all 0.5s ease;
        }

        body.light-theme .card-content h1 {
            background: linear-gradient(135deg, #000000 0%, #666666 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .card-content p {
            font-size: 1.25rem;
            opacity: 0.6;
            max-width: 600px;
            text-align: center;
            line-height: 1.8;
            color: #ffffff;
            transition: color 0.5s ease;
        }

        body.light-theme .card-content p {
            color: #333333;
        }

        .card-content .highlight {
            margin-top: 2rem;
            padding: 1rem 2rem;
            border: 1px solid rgba(255, 255, 255, 0.2);
            border-radius: 50px;
            background: rgba(255, 255, 255, 0.05);
            backdrop-filter: blur(10px);
            font-size: 0.9rem;
            opacity: 0.8;
            transition: all 0.5s ease;
        }

        body.light-theme .card-content .highlight {
            border: 1px solid rgba(0, 0, 0, 0.1);
            background: rgba(0, 0, 0, 0.03);
            color: #333333;
        }

        /* 浅色主题下增强光晕饱和度和亮度 */
        body.light-theme {
            --orbit-glow-1-saturation: 100;
            --orbit-glow-1-lightness: 40;   /* 提高亮度 */
            --orbit-glow-2-saturation: 100;
            --orbit-glow-2-lightness: 50;   /* 提高亮度 */
            --orbit-glow-3-saturation: 100;
            --orbit-glow-3-lightness: 40;   /* 提高亮度 */
            --orbit-glow-4-saturation: 100;
            --orbit-glow-4-lightness: 50;   /* 提高亮度 */
            --orbit-glow-5-lightness: 70;   /* 白色光晕在浅色模式下更亮 */
        }

        /* 浅色主题下提高光晕不透明度 */
        body.light-theme .orbiting-glow {
            opacity: 0.7;
        }

        /* 浅色主题下提高边缘高光的透明度 */
        body.light-theme .card-glow-highlight-1::before,
        body.light-theme .card-glow-highlight-2::before,
        body.light-theme .card-glow-highlight-3::before,
        body.light-theme .card-glow-highlight-4::before {
            opacity: 2; /* 提高边缘高光的基础透明度 */
            filter: brightness(2) saturate(1.5); /* 增加亮度和饱和度 */
        }

        body.light-theme .card-glow-highlight-5::before {
            opacity: 2;
            filter: brightness(1.5) saturate(0.5); /* 白色光晕 */
        }

        /* 环境光晕 */
        body::before {
            display: none; /* 禁用环境光晕 */
        }

        @media (max-width: 768px) {
            .card-content {
                padding: 40px;
            }
            .card-content h1 {
                font-size: 2.5rem;
            }
            .card-content p {
                font-size: 1rem;
            }
        }
    
    </style>
</head>
<body>
    <button class="theme-toggle" onclick="toggleTheme()" aria-label="切换主题">
        <svg viewBox="0 0 24 24" class="theme-icon-dark">
            <circle cx="12" cy="12" r="5"></circle>
            <line x1="12" y1="1" x2="12" y2="3"></line>
            <line x1="12" y1="21" x2="12" y2="23"></line>
            <line x1="4.22" y1="4.22" x2="5.64" y2="5.64"></line>
            <line x1="18.36" y1="18.36" x2="19.78" y2="19.78"></line>
